  <section id="work" class="container content-section text-center">
   <div class="row">
   <div class="col-xs-12">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('');">
        <div class="card-category"></div>
        <div class="card-description">
          <% data.about.each do |about| %>
          <div class = "about-title"><%= about["title-right"] %></div>  
          <div class = "about-description"><%= about["description-right"] %></div>
          <div class = "about-paragraph"><%= about["paragraph-right"] %></div> 
        </div>
      </div>
    </div>
    <% end  %>
  </section>
