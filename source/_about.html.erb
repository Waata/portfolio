    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h1>About</h1>
                <% data.about.each do |about| %>
                <div class = "about-name"><%= about["name"] %></div>  
                <div class = "about-description"><%= about["description"] %></div>
                <div class = "about-price"><%= about["price"] %></div> 
                <% end %>
            </div>
        </div>
    </section>